{
  "name": "cypress",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/cypress/src",
  "projectType": "application",
  "targets": {
    "e2e": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "cypressConfig": "apps/cypress/cypress.config.ts",
        "devServerTarget": "design-system:serve:development",
        "testingType": "e2e"
      },
      "configurations": {
        "production": {
          "devServerTarget": "design-system:serve:production"
        },
        "ci": {
          "devServerTarget": "design-system:serve-static"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/cypress/**/*.{js,ts}"]
      }
    }
  },
  "tags": [],
  "implicitDependencies": ["design-system"]
}
